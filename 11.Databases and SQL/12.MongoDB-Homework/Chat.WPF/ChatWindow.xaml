<Window x:Class="Chat.WPF.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat" Height="325.6" Width="463.2"
        Loaded="OnWindowFormLoaded"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Button 
            Content="Post" 
            HorizontalAlignment="Left" 
            Margin="342,209,0,0" 
            VerticalAlignment="Top" 
            Width="75" Click="OnPostButton_Click"/>
        <TextBox 
            Name="postContent"
            HorizontalAlignment="Left" 
            Height="22" Margin="28,209,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="301" 
            FontWeight="Bold"/>
        <Button 
            
            Content="Show all posts" 
            HorizontalAlignment="Left" 
            Margin="342,251,0,0" 
            VerticalAlignment="Top" 
            Width="75" Click="OnShowAllPosts_Click"/>
        <TextBox 
            Name="allPostsTextBox"
            HorizontalAlignment="Left" 
            Height="161" Margin="28,29,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="389"/>

    </Grid>
</Window>
